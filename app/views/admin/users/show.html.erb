<% content_for :title, "User Details: #{@user.email}" %>

<div class="mb-6">
  <%= link_to admin_users_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
    <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Users
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- User Info -->
  <div class="lg:col-span-1 space-y-6">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Profile Information</h3>
      <div class="space-y-4">
        <div>
          <p class="text-sm font-medium text-gray-500">Email</p>
          <p class="text-base text-gray-900"><%= @user.email %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Joined</p>
          <p class="text-base text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Last Sign In</p>
          <p class="text-base text-gray-900"><%= @user.last_sign_in_at&.strftime("%B %d, %Y %H:%M") || 'Never' %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Admin Access</p>
          <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-medium <%= @user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @user.admin? ? 'Yes' : 'No' %>
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Current Subscription</h3>
      <% if @subscription %>
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Plan</p>
            <p class="text-xl font-bold text-indigo-600"><%= @subscription.subscription_plan.name %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Status</p>
            <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-medium <%= @subscription.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @subscription.status.titleize %>
            </span>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Usage This Month</p>
            <div class="mt-1 flex items-center">
              <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2">
                <% percentage = [(@user.generations_this_month.to_f / (@subscription.subscription_plan.generations_per_month.nonzero? || 1) * 100), 100].min %>
                <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
              </div>
              <span class="text-sm text-gray-600"><%= @user.generations_this_month %> / <%= @subscription.subscription_plan.unlimited_generations? ? 'âˆž' : @subscription.subscription_plan.generations_per_month %></span>
            </div>
          </div>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No active subscription</p>
      <% end %>
    </div>
  </div>

  <!-- Activity -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Recent Documents -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900">Recent Documents</h3>
      </div>
      <% if @documents.any? %>
        <ul class="divide-y divide-gray-100">
          <% @documents.each do |doc| %>
            <li class="px-6 py-4 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= doc.title %></p>
                  <p class="text-xs text-gray-500"><%= doc.created_at.strftime("%B %d, %Y") %></p>
                </div>
                <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= doc.status.titleize %>
                </span>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="p-6 text-center text-gray-500">No documents generated yet.</div>
      <% end %>
    </div>

    <!-- Transaction History -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900">Transaction History</h3>
      </div>
      <% if @transactions.any? %>
        <ul class="divide-y divide-gray-100">
          <% @transactions.each do |tx| %>
            <li class="px-6 py-4 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= tx.subscription.subscription_plan.name %></p>
                  <p class="text-xs text-gray-500"><%= tx.transaction_date.strftime("%B %d, %Y") %></p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-bold text-gray-900">KES <%= tx.amount.to_i %></p>
                  <span class="text-xs <%= tx.successful? ? 'text-green-600' : 'text-red-600' %>">
                    <%= tx.status.titleize %>
                  </span>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="p-6 text-center text-gray-500">No transactions found.</div>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-3xl mx-auto px-4 py-8">
  <!-- Progress Steps -->
  <div class="mb-8">
    <nav aria-label="Progress">
      <ol class="flex items-center">
        <li class="relative pr-8 sm:pr-20 flex-1">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="h-0.5 w-full bg-indigo-600"></div>
          </div>
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600">
            <span class="text-white font-semibold text-sm">1</span>
          </div>
        </li>
        <li class="relative pr-8 sm:pr-20 flex-1">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="h-0.5 w-full bg-gray-200"></div>
          </div>
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200">
            <span class="text-gray-600 font-semibold text-sm">2</span>
          </div>
        </li>
        <li class="relative flex-1">
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200">
            <span class="text-gray-600 font-semibold text-sm">3</span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Step 1: Project Information</h2>
    <p class="text-gray-600 mb-6">Tell us about your project and organization</p>

    <%= form_with url: save_step1_grants_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= label_tag 'grant[project_title]', 'Project Title *', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_field_tag 'grant[project_title]', session.dig(:grant_form, :step1, :project_title), 
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            placeholder: 'e.g., Community Health Initiative',
            required: true %>
      </div>

      <div>
        <%= label_tag 'grant[organization_name]', 'Organization Name *', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_field_tag 'grant[organization_name]', session.dig(:grant_form, :step1, :organization_name),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            placeholder: 'Your organization name',
            required: true %>
      </div>

      <div>
        <%= label_tag 'grant[contact_email]', 'Contact Email *', class: 'block text-sm font-medium text-gray-700' %>
        <%= email_field_tag 'grant[contact_email]', session.dig(:grant_form, :step1, :contact_email),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            placeholder: 'contact@organization.org',
            required: true %>
      </div>

      <div>
        <%= label_tag 'grant[project_duration]', 'Project Duration', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_field_tag 'grant[project_duration]', session.dig(:grant_form, :step1, :project_duration),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            placeholder: 'e.g., 12 months' %>
      </div>

      <div class="flex justify-end space-x-3 pt-4">
        <%= link_to "Cancel", user_dashboard_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= f.submit "Next Step", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>

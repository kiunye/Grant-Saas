<div class="max-w-3xl mx-auto px-4 py-8">
  <!-- Progress Steps -->
  <div class="mb-8">
    <nav aria-label="Progress">
      <ol class="flex items-center">
        <li class="relative pr-8 sm:pr-20 flex-1">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="h-0.5 w-full bg-indigo-600"></div>
          </div>
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600">
            <svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        </li>
        <li class="relative pr-8 sm:pr-20 flex-1">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="h-0.5 w-full bg-indigo-600"></div>
          </div>
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600">
            <span class="text-white font-semibold text-sm">2</span>
          </div>
        </li>
        <li class="relative flex-1">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="h-0.5 w-full bg-gray-200"></div>
          </div>
          <div class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200">
            <span class="text-gray-600 font-semibold text-sm">3</span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Step 2: Needs & Objectives</h2>
    <p class="text-gray-600 mb-6">Describe the problem and your goals</p>

    <%= form_with url: save_step2_grants_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= label_tag 'grant[problem_statement]', 'Problem Statement *', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_area_tag 'grant[problem_statement]', session.dig(:grant_form, :step2, :problem_statement),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            rows: 4,
            placeholder: 'Describe the problem your project will address...',
            required: true %>
        <p class="mt-1 text-sm text-gray-500">Clearly articulate the need or problem</p>
      </div>

      <div>
        <%= label_tag 'grant[target_population]', 'Target Population *', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_area_tag 'grant[target_population]', session.dig(:grant_form, :step2, :target_population),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            rows: 3,
            placeholder: 'Who will benefit from this project?',
            required: true %>
      </div>

      <div>
        <%= label_tag 'grant[project_goals]', 'Project Goals *', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_area_tag 'grant[project_goals]', session.dig(:grant_form, :step2, :project_goals),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            rows: 4,
            placeholder: 'What do you hope to achieve?',
            required: true %>
      </div>

      <div>
        <%= label_tag 'grant[expected_impact]', 'Expected Impact', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_area_tag 'grant[expected_impact]', session.dig(:grant_form, :step2, :expected_impact),
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
            rows: 3,
            placeholder: 'Describe the expected outcomes and impact' %>
      </div>

      <div class="flex justify-between space-x-3 pt-4">
        <%= link_to "Back", step1_grants_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <div class="flex space-x-3">
          <%= link_to "Cancel", user_dashboard_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Next Step", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

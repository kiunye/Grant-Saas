<div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
  <!-- Header -->
  <div class="mb-12">
    <h1 class="text-4xl font-extrabold tracking-tight text-gray-900">Welcome back</h1>
    <p class="mt-2 text-lg text-gray-600"><%= @user.email %></p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-12">
    <!-- Generations Used -->
    <div class="relative bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Generations Used</p>
          <p class="text-3xl font-bold text-gray-900"><%= @generations_this_month %></p>
        </div>
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Remaining -->
    <div class="relative bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Remaining</p>
          <p class="text-3xl font-bold text-gray-900">
            <%= @remaining_generations == Float::INFINITY ? 'âˆž' : @remaining_generations %>
          </p>
        </div>
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Current Plan -->
    <div class="relative bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Current Plan</p>
          <p class="text-3xl font-bold text-gray-900"><%= @plan&.name || 'None' %></p>
        </div>
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Documents -->
    <div class="relative bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Total Documents</p>
          <p class="text-3xl font-bold text-gray-900"><%= current_user.documents.count %></p>
        </div>
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-2xl border border-gray-200 p-8 mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-6">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <%= link_to step1_grants_path, class: "group inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl hover:from-indigo-700 hover:to-indigo-800 transition-all transform hover:-translate-y-0.5" do %>
        <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Grant Proposal
      <% end %>
      <%= link_to documents_path, class: "inline-flex items-center px-6 py-3 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-xl hover:border-indigo-600 hover:text-indigo-600 transition-all hover:shadow-md" do %>
        View All Documents
      <% end %>
      <% if @subscription && !@plan.unlimited_generations? && @remaining_generations < 2 %>
        <%= link_to new_subscription_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white font-semibold rounded-xl hover:from-orange-600 hover:to-orange-700 transition-all hover:shadow-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Upgrade Plan
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Recent Documents -->
  <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden mb-12">
    <div class="px-8 py-6 border-b border-gray-100">
      <h2 class="text-xl font-bold text-gray-900">Recent Documents</h2>
    </div>
    <% if @documents.any? %>
      <ul class="divide-y divide-gray-100">
        <% @documents.each do |document| %>
          <li class="px-8 py-5 hover:bg-gray-50 transition-colors">
            <%= link_to document, class: "block group" do %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0 flex items-center space-x-4">
                  <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-base font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors"><%= document.title %></p>
                    <p class="text-sm text-gray-500">Created <%= document.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                </div>
                <div class="ml-4 flex-shrink-0 flex items-center space-x-3">
                  <span class="inline-flex px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                    <%= document.status.titleize %>
                  </span>
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-8 py-16 text-center">
        <div class="w-16 h-16 mx-auto rounded-full bg-gray-100 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No documents yet</h3>
        <p class="text-gray-600 mb-6">Get started by creating your first grant proposal.</p>
        <%= link_to "New Grant Proposal", step1_grants_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl hover:from-indigo-700 hover:to-indigo-800 transition-all" %>
      </div>
    <% end %>
  </div>

  <!-- Payment History -->
  <% if @recent_transactions.any? %>
    <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-100">
        <h2 class="text-xl font-bold text-gray-900">Recent Transactions</h2>
      </div>
      <ul class="divide-y divide-gray-100">
        <% @recent_transactions.each do |transaction| %>
          <li class="px-8 py-5">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 rounded-lg <%= transaction.successful? ? 'bg-green-100' : 'bg-red-100' %> flex items-center justify-center">
                  <svg class="w-5 h-5 <%= transaction.successful? ? 'text-green-600' : 'text-red-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= transaction.successful? ? 'M5 13l4 4L19 7' : 'M6 18L18 6M6 6l12 12' %>" />
                  </svg>
                </div>
                <div>
                  <p class="text-base font-semibold text-gray-900"><%= transaction.subscription.subscription_plan.name %> Plan</p>
                  <p class="text-sm text-gray-500"><%= transaction.transaction_date.strftime("%B %d, %Y") %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-base font-bold text-gray-900">KES <%= transaction.amount.to_i %></p>
                <span class="inline-flex px-3 py-1 rounded-full text-xs font-semibold <%= transaction.successful? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= transaction.status.titleize %>
                </span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

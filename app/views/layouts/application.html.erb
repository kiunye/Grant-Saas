<!DOCTYPE html>
<html class="h-full">
  <head>
    <title><%= content_for(:title) || "GrantSaaS - AI-Powered Grant Writing" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-gray-50 font-sans antialiased">
    <!-- Navigation -->
    <nav class="bg-white/80 backdrop-blur-md shadow-sm fixed top-0 w-full z-50 border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <div class="flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-3 group" do %>
              <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <span class="text-xl font-bold text-gray-900">GrantSaaS</span>
            <% end %>
          </div>

          <!-- Navigation Links -->
          <div class="flex items-center space-x-2">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", user_dashboard_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" %>
              <%= link_to "Documents", documents_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" %>
              <%= link_to "Subscription", subscriptions_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" %>
              <%= link_to step1_grants_path, class: "ml-3 inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white text-sm font-semibold rounded-lg shadow-sm hover:shadow-md hover:from-indigo-700 hover:to-indigo-800 transition-all transform hover:-translate-y-0.5" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                New Grant
              <% end %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "ml-2 px-4 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition-all" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" %>
              <%= link_to "Get Started", new_user_registration_path, class: "ml-3 inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white text-sm font-semibold rounded-lg shadow-sm hover:shadow-md hover:from-indigo-700 hover:to-indigo-800 transition-all transform hover:-translate-y-0.5" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="fixed top-24 right-6 z-50 animate-fade-in max-w-md">
        <div class="bg-white border-l-4 border-green-500 rounded-xl p-4 shadow-lg">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-gray-900"><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="fixed top-24 right-6 z-50 animate-fade-in max-w-md">
        <div class="bg-white border-l-4 border-red-500 rounded-xl p-4 shadow-lg">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-gray-900"><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="pt-20 min-h-screen">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-100 mt-20">
      <div class="max-w-7xl mx-auto py-12 px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500">
            &copy; <%= Time.current.year %> GrantSaaS. All rights reserved.
          </p>
          <div class="flex space-x-6">
            <a href="#" class="text-sm text-gray-500 hover:text-indigo-600 transition-colors">Privacy</a>
            <a href="#" class="text-sm text-gray-500 hover:text-indigo-600 transition-colors">Terms</a>
            <a href="#" class="text-sm text-gray-500 hover:text-indigo-600 transition-colors">Support</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
